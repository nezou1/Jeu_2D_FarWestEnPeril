<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="1000.0" prefWidth="1000.0"
            xmlns="http://javafx.com/javafx/21"
            fx:controller="universite_paris8.iut.lefarwestenperil.sae2_04.Controleur.Controleur">
    <ImageView fitHeight="3200.0" fitWidth="1600.0" preserveRatio="false">
        <image>
            <Image url="@arrierePlan.jpeg"/>
        </image>
    </ImageView>
    <center>
        <Pane fx:id="panneauDeJeu" prefHeight="1600.0" prefWidth="3200.0" BorderPane.alignment="CENTER">
            <children>
                <TilePane fx:id="tuile" prefColumns="50" prefHeight="1600.0" prefRows="50" prefTileHeight="32.0"
                          prefTileWidth="32.0" prefWidth="3200.0" style="-fx-alignment: center;"
                          BorderPane.alignment="CENTER"/>
            </children>
        </Pane>
    </center>
    <top>
        <HBox>
            <HBox fx:id="vieBox" alignment="TOP_LEFT" spacing="5"/>
            <Button fx:id="boutonRecommencer" mnemonicParsing="false" onAction="#reactionBoutonRecommencer"
                    style="-fx-background-color: #6586df;" styleClass="boutonMenu" stylesheets="@menu.css"
                    text="Recommencer" textFill="#280909"/>
            <Button fx:id="boutonPrecedent" mnemonicParsing="false" onAction="#reactionBoutonPrecedent"
                    prefHeight="26.0" prefWidth="90.0" style="-fx-background-color: #6586df;" styleClass="boutonMenu"
                    stylesheets="@menu.css" text="Précédent" textAlignment="CENTER" textFill="#130505"/>
            <Button fx:id="boutonPause" mnemonicParsing="false" onAction="#reactionBoutonPause" prefHeight="26.0"
                    prefWidth="91.0" style="-fx-background-color: #6586df;" styleClass="boutonMenu"
                    stylesheets="@menu.css" text="Pause" textFill="#0a142e"/>
        </HBox>
    </top>


</BorderPane>
